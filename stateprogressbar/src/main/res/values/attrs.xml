<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="StateProgressBar">

        <attr name="spb_stateBackgroundColor" format="color" />
        <attr name="spb_stateForegroundColor" format="color" />

        <attr name="spb_stateNumberBackgroundColor" format="color" />
        <attr name="spb_stateNumberForegroundColor" format="color" />

        <attr name="spb_currentStateDescriptionColor" format="color" />
        <attr name="spb_stateDescriptionColor" format="color" />

        <attr name="spb_currentStateDescriptionBackgroundColor" format="color" />
        <attr name="spb_stateDescriptionBackgroundColor" format="color" />

        <attr name="spb_stateHighlightMode" format="enum">
            <enum name="none" value="0" />
            <enum name="current" value="1" />
            <enum name="finished" value="2" />
        </attr>

        <attr name="spb_stateSize" format="dimension" />

        <attr name="spb_stateTextSize" format="dimension" />

        <attr name="spb_stateDescriptionSize" format="dimension" />

        <attr name="spb_stateLineThickness" format="dimension" />

        <attr name="spb_checkStateCompleted" format="boolean" />

        <attr name="spb_stateNumberIsDescending" format="boolean" />

        <attr name="spb_animateToCurrentProgressState" format="boolean" />

        <attr name="spb_enableAllStatesCompleted" format="boolean" />

        <attr name="spb_descriptionTopSpaceDecrementer" format="dimension" />

        <attr name="spb_descriptionTopSpaceIncrementer" format="dimension" />

        <attr name="spb_animationDuration" format="integer" />

        <attr name="spb_animationStartDelay" format="integer" />

        <attr name="spb_justifyMultilineDescription" format="boolean" />

        <attr name="spb_descriptionLinesSpacing" format="dimension" />
        <attr name="spb_descriptionFontFamily" format="reference" />

        <attr name="spb_maxDescriptionLines" format="integer" />


        <attr name="spb_currentStateNumber" format="integer" />

        <attr name="spb_maxStateNumber" format="integer" />

        <attr name="spb_textStartNumber" format="integer" />

    </declare-styleable>


</resources>